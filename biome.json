{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "style": {
        "useFilenamingConvention": {
          "level": "error",
          "options": {
            "format": "kebab-case"
          }
        }
      },
      "security": {
        "noConsoleLog": "error"
      },
      "suspicious": {
        "noExplicitAny": "warn"
      },
      "a11y": {
        "useAltText": "error"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "formatWithErrors": true,
    "include": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx"],
    "javascript": {
      "quoteStyle": "single",
      "trailingComma": "es5",
      "semicolons": "always"
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "semicolons": "always"
    }
  }
}