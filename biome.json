{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "recommended": true,
        "noVar": "error",
        "noNegationElse": "error"
      },
      "suspicious": {
        "recommended": true,
        "noConsoleLog": "error",
        "noExplicitAny": "warn",
        "noImplicitAnyLet": "warn"
      },
      "complexity": {
        "recommended": true,
        "noForEach": "warn",
        "useOptionalChain": "error"
      },
      "correctness": {
        "recommended": true,
        "noUnusedVariables": "error",
        "useExhaustiveDependencies": "error"
      },
      "a11y": {
        "recommended": true,
        "useAltText": "error",
        "useButtonType": "error",
        "useKeyWithClickEvents": "error"
      },
      "security": {
        "recommended": true,
        "noDangerouslySetInnerHtml": "error"
      },
      "performance": {
        "recommended": true
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "formatWithErrors": true,
    "include": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx"]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "semicolons": "always"
    }
  }
}